<%- include('partials/cabecera')%>
<%- include('partials/nav')%>
<section class="flex items-center justify-center flex-wrap mt-10 gap-x-6 gap-y-6 mb-5">
            <div class="flex w-full">
                <form class="text-xl w-full items-center justify-center flex flex-col" action="/agregarPoni" method="post">
                    <div class="flex flex-col items-center justify-center w-full mx-auto font-description">
                        <p class="w-1/3 text-center font-bold mb-2">DESCRIPCIÓN</p>
                        <textarea class="mt-3 mb-3 w-[90%] text-justify text-white h-20 rounded-lg bg-pink-900 outline-none text-left p-3" required name="descripcion" minlength="3"></textarea>
                    </div>
                    <div class="my-4 bg-pink-900 rounded-lg w-[75%] p-3 shadow-lg gap-x-5 flex flex-col">
                        <div class="flex items-center justify-center w-full">
                            <p class="w-1/3 text-center font-bold mb-2">TIPO</p>
                            <p class="w-1/3 text-center font-bold mb-2">HABILIDAD</p>
                            <p class="w-1/3 text-center font-bold mb-2">COLOR</p>
                        </div>
                        <div class="flex items-center justify-center w-full mb-6">
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8"required name="tipo" minlength="3"></input>
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8" required name="habilidad" minlength="3"></input>
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8" required name="color" minlength="3"></input>
                        </div>
                        <div class="flex items-center justify-center w-full">
                            <p class="w-1/3 text-center font-bold mb-2">PERSONALIDAD</p>
                            <p class="w-1/3 text-center font-bold mb-2">AFILIACIÓN</p>
                            <p class="w-1/3 text-center font-bold mb-2">MEJOR AMIGO</p>
                        </div>
                        <div class="flex items-center justify-center w-full mb-4">
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8" required name="personalidad" minlength="3"></input>
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8" required name="afiliacion" minlength="3"></input>
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8" required name="mejor_amigo" minlength="3"></input>
                        </div>
                        <div class="flex items-center justify-center w-full">
                            <p class="w-1/3 text-center font-bold mb-2">NOMBRE</p>
                            <p class="w-1/3 text-center font-bold mb-2">RESIDENCIA</p>
                            <p class="w-1/3 text-center font-bold mb-2">CORTE DE PELO</p>
                        </div>
                        <div class="flex items-center justify-center w-full mb-4">
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8" required name="nombre" minlength="3"></input>
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8" required name="residencia" minlength="3"></input>
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8" required name="corte_mane" minlength="3"></input>
                        </div>
                        <div class="flex flex-col items-center justify-center w-full mx-auto font-description mb-3">
                            <p class="w-1/3 text-center font-bold mb-2">IMAGEN</p>
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8" required name="imagen" minlength="3"></input>
                        </div>
                    </div>
                    <div class="flex w-full items-center justify-center mt-5">
                            <button class="bg-purple-500 text-white px-4 py-2 mr-2 rounded hover:bg-purple-700 relative bottom-3">
                                Agregar
                            </button>
                    </div>
                </form>
            </div>
</section>
<%- include('partials/footer')%>