<%- include('partials/cabecera')%>
<%- include('partials/nav')%>
<section class="flex items-center justify-center flex-wrap mt-10 gap-x-6 gap-y-6 mb-5">
    <%if (ponis && ponis.length > 0) {%>
        <% for (poni of ponis) {%>
            <div class="flex w-full">
                <div class="rounded-lg h-[10rem] flex w-[20%] flex-col ml-8">
                    <div class="w-[100%] flex flex-col">
                        <img src="<%= poni.imagen %>" alt="" class="w-full h-full object-cover rounded-lg cursor-pointer shadow-xl mb-3">
                        <h1 class="text-pink-300 font-titulos tracking-wide text-2xl text-center"><%= poni.nombre%></h1>
                    </div>                   
                </div>
                <form class="text-xl w-[90%] items-center justify-center flex flex-col" action="/actualizar" method="post">
                    <div class="flex flex-col items-center justify-center w-full mx-auto font-description">
                        <p class="w-1/3 text-center font-bold mb-2">DESCRIPCIÓN</p>
                        <textarea class="mt-3 mb-3 w-[90%] text-justify text-white h-20 rounded-lg bg-pink-900 outline-none text-left p-3" required name="descripcion" minlength="3"><%=poni.descripcion%></textarea>
                    </div>
                    <div class="my-4 bg-pink-900 rounded-lg w-[75%] p-3 shadow-lg gap-x-5 flex flex-col">
                        <div class="flex items-center justify-center w-full">
                            <p class="w-1/3 text-center font-bold mb-2">TIPO</p>
                            <p class="w-1/3 text-center font-bold mb-2">HABILIDAD</p>
                            <p class="w-1/3 text-center font-bold mb-2">COLOR</p>
                        </div>
                        <div class="flex items-center justify-center w-full mb-6">
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8" value="<%= poni.tipo%>" required name="tipo" minlength="3"></input>
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8" value="<%= poni.habilidad%>" required name="habilidad" minlength="3"></input>
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8" value="<%= poni.color%>" required name="color" minlength="3"></input>
                        </div>
                        <div class="flex items-center justify-center w-full">
                            <p class="w-1/3 text-center font-bold mb-2">PERSONALIDAD</p>
                            <p class="w-1/3 text-center font-bold mb-2">AFILIACIÓN</p>
                            <p class="w-1/3 text-center font-bold mb-2">MEJOR AMIGO</p>
                        </div>
                        <div class="flex items-center justify-center w-full mb-4">
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8" value="<%= poni.personalidad%>" required name="personalidad" minlength="3"></input>
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8" value="<%= poni.afiliacion%>" required name="afiliacion" minlength="3"></input>
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8" value="<%= poni.mejor_amigo%>" required name="mejor_amigo" minlength="3"></input>
                        </div>
                        <div class="flex items-center justify-center w-full">
                            <p class="w-1/3 text-center font-bold mb-2">NOMBRE</p>
                            <p class="w-1/3 text-center font-bold mb-2">RESIDENCIA</p>
                            <p class="w-1/3 text-center font-bold mb-2">CORTE DE PELO</p>
                        </div>
                        <div class="flex items-center justify-center w-full mb-4">
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8" value="<%= poni.nombre%>" required name="nombre" minlength="3"></input>
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8" value="<%= poni.residencia%>" required name="residencia" minlength="3"></input>
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8" value="<%= poni.corte_mane%>" required name="corte_mane" minlength="3"></input>
                        </div>
                        <div class="flex flex-col items-center justify-center w-full mx-auto font-description mb-3">
                            <p class="w-1/3 text-center font-bold mb-2">IMAGEN</p>
                            <input type="text" class="w-1/3 text-center rounded-lg outline-none text-black mr-8" value="<%= poni.imagen%>" required name="imagen" minlength="3"></input>
                        </div>
                    </div>
                    <div class="flex w-full items-center justify-center mt-5">
                            <input type="hidden" name="id_poni" value="<%=poni.id%>">
                            <button class="bg-purple-500 text-white px-4 py-2 mr-2 rounded hover:bg-purple-700 relative bottom-3">
                                Actualizar
                            </button>
                    </div>
                </form>
            </div>
        <% } %>
    <% }else{%>
        <p class="text-pink-300 font-titulos text-2xl">No hay ponies con los criterios específicados.</p>
    <% } %>
</section>
<%- include('partials/footer')%>